{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Ruby File",
            "type": "ruby_lsp",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug com Bundle",
            "type": "ruby_lsp", 
            "request": "launch",
            "program": "bundle exec ruby ${file}",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Terminal",
            "type": "node",
            "request": "launch",
            "program": "ruby",
            "args": ["${file}"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}